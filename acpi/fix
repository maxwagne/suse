#!/bin/bash

case "$1" in
    hibernate|suspend)
        # Log a message indicating that the script is being executed during hibernate or suspend
        /usr/bin/logger -t "YourScriptName" "Script executed during $1 state transition"

        # Check if the device wake-up state is enabled, and if so, disable it
        if grep -q "GP00.*enabled" /proc/acpi/wakeup; then
            /usr/bin/logger -t "YourScriptName" "Disabling wake-up for device GP00"
            sh -c 'echo "GP00" > /proc/acpi/wakeup'
        fi
        ;;
    thaw|resume)
        # Log a message indicating that the script is being executed during thaw or resume
        /usr/bin/logger -t "YourScriptName" "Script executed during $1 state transition"

        # No action needed when waking up
        ;;
    *)
        # Log a message if an unrecognized state is encountered
        /usr/bin/logger -t "YourScriptName" "Unrecognized state: $1"
        ;;
esac

